<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 frame text-center" style="background-color: rgb(255, 255, 255); border: 1px solid rgba(128, 144, 153, 0.5);">
      <h2 class="pb-3">Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: false,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", as: :hidden, placeholder: "Email" } %>
          <%= f.input :password,
                      label: false,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: "Password" } %>
          <%= f.input :remember_me, wrapper_html: { class: "remember-text" }, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", :class => 'main-btn mb-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
