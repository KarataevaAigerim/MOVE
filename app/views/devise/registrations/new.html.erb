<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 frame text-center" style="background-color: rgb(255, 255, 255); border: 1px solid rgba(128, 144, 153, 0.5);">
      <h2 class="pb-3">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      label: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder: "Email" }%>
          <%= f.input :password,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password", placeholder: "Password"} %>
          <%= f.input :password_confirmation,
                      label: false,
                      required: true,
                      input_html: { autocomplete: "new-password", placeholder: "Confirm password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", :class => 'main-btn mb-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %> 
      </div>
  </div>
</div>
