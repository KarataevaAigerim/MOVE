
<div class="dashboard-page-container show", id="dashboard">
  <!-- Sidebar -->
  <div class="w3-sidebar w3-bar-block w3-padding sidebar-bg w3-large pr-none sidebar" style="width:20%">
    
    <div class="w3-bar-item mb-3 mt-4">
        <%= link_to "My info", profile_path, class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    <div>
    <div class="w3-bar-item mb-3 mt-4">
        <%= link_to "Progress photos", user_progresses_path(current_user), class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    </div>
    <div class="w3-bar-item mb-3 mt-4">
        <%= link_to "Community", root_path, class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    </div>
    <div class="w3-bar-item mb-3 mt-4">
        <%= link_to "Nutritional tips", tips_path, class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    </div>
    <div class="w3-bar-item mb-3 mt-4">
        <%= link_to "Contact", contact_path, class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    </div>
    <div class="w3-bar-item mb-3 mt-4 back-btn">
        <%= link_to "Back", dashboard_path, class: "w3-bar-item w3-button hover-sidebar-list mb-4" %>
    </div>
  </div>
 </div>
</div>

<div class="page">
    <h2 class="header-page"> Week <%= @week.week_number %> </h2>
    <% Day.where(week: @week).limit(5).each do |day| %>
        <%= link_to day_path(day.id), class: "week-text" do %>
            <div class="week">
                <%= day.description %>
            </div>
        <% end %>
    <% end %>
</div>
